{
  "name": "ove",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ove/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/ove/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs ove {args.ver} {args.tag}",
      "dependsOn": ["test", "build"]
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "minify": false,
        "target": "es2015",
        "outputPath": "dist/packages/ove"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "start": {
      "command": "cd packages/ove && yarn vite --port 3344"
    },
    "launch-e2e": {
      "command": "npx concurrently -k \"wait-on tcp:3344 && cd packages/ove && yarn cypress open --e2e --browser chrome --config\" \"nx run ove:start\""
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nx run ove:start"],
        "readyWhen": "ready in"
      }
    },
    "e2e": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "parallel": true,
        "key": "373658d4-4931-4ffd-9263-8eb78a838ab9",
        "record": true,
        "cypressConfig": "packages/ove/cypress.config.ts",
        "devServerTarget": "ove:serve",
        "testingType": "e2e"
      }
    },

    "e2e_old": {
      "command": "npx concurrently --kill-others --kill-signal SIGKILL --success first \"npx wait-on tcp:3344 && cd packages/ove && yarn cypress run --record --key 373658d4-4931-4ffd-9263-8eb78a838ab9 --config --e2e\" \"nx run ove:start\" "
    },
    "test": {
      "command": "cd packages/ove && yarn vitest run --changed --config vite.config.ts"
    }
  }
}
