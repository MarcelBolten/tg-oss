{
  "name": "ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ui/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/ui/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs ui {args.ver} {args.tag}",
      "dependsOn": ["test", "build"]
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "minify": false,
        "target": "es2015",
        "outputPath": "dist/packages/ui"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "start": {
      "command": "cd packages/ui && yarn vite --port 4200"
    },
    "launch-e2e": {
      "command": "npx concurrently -k \"wait-on tcp:4200 && cd packages/ui && yarn cypress open --e2e --browser chrome --config\" \"nx run ui:start\""
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nx run ui:start"],
        "readyWhen": "ready in"
      }
    },
    "e2e": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "parallel": true,
        "key": "1ced39be-1a3a-4fd8-b2d5-a88951d9b766",
        "record": true,
        "cypressConfig": "packages/ui/cypress.config.ts",
        "devServerTarget": "ui:serve",
        "testingType": "e2e"
      }
    },
    "e2e_old": {
      "command": "npx concurrently --kill-others --kill-signal SIGKILL --success first \"npx wait-on tcp:4200 && cd packages/ui && yarn cypress run --record --key 1ced39be-1a3a-4fd8-b2d5-a88951d9b766 --config --e2e\" \"nx run ui:start\" "
    },
    "test": {
      "command": "cd packages/ui && yarn vitest run --changed --config vite.config.ts"
    }
  }
}
