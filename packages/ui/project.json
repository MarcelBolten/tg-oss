{
  "name": "ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ui/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/ui/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs ui {args.ver} {args.tag}",
      "dependsOn": ["test", "build"]
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "minify": false,
        "target": "es2015",
        "outputPath": "dist/packages/ui"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "start": {
      "command": "cd packages/ui && yarn vite --port 4200"
    },
    "launch-e2e": {
      "command": "npx concurrently -k \"wait-on tcp:4200 && cd packages/ui && yarn cypress open --e2e --browser chrome\" \"nx run ui:start\""
    },

    "e2e": {
      "command": "npx concurrently --kill-others --kill-signal SIGKILL --success first \"npx wait-on tcp:4200 && cd packages/ui && yarn cypress run --config --e2e --browser chrome\" \"nx run ui:start\" "
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["coverage/packages/ui"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/ui"
      }
    }

  }
}
