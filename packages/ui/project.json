{
  "name": "ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ui/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/ui/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "minify": false,
        "target": "es2015",
        "outputPath": "dist/packages/ui"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "start": {
      "command": "cd packages/ui && yarn vite --open --port 4200"
    },
    "launch-e2e": {
      "dependsOn": ["start"],
      "command": "cd packages/ui && yarn cypress open --e2e --browser chrome"
    },
    "run-e2e": {
      "dependsOn": ["start"],
      "command": "nx run ui:start cd packages/ui && yarn cypress run --e2e --browser chrome"
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["coverage/packages/sequence-utils"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/sequence-utils"
      }
    }

  }
}
