{
  "name": "ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ui/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/ui/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs ui {args.ver} {args.tag}",
      "dependsOn": ["test", "build"]
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "minify": false,
        "target": "es2015",
        "outputPath": "dist/packages/ui"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["cd packages/ui && yarn vite --port 4200"]
      },
      "configurations": {
        "ci": {
          "readyWhen": "ready in"
        }
      }
    },
    "launch-e2e": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "watch": true,
        "headed": true,
        "browser": "chrome",
        "cypressConfig": "packages/ui/cypress.config.ts",
        "devServerTarget": "ui:start:ci",
        "testingType": "e2e"
      }
    },
    "e2e": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "parallel": true,
        "key": "373658d4-4931-4ffd-9263-8eb78a838ab9",
        "record": true,
        "cypressConfig": "packages/ui/cypress.config.ts",
        "devServerTarget": "ui:start:ci",
        "testingType": "e2e"
      },
      "configurations": {
        "dev": {
          "parallel": false
        }
      }
    },
    "test": {
      "command": "cd packages/ui && yarn vitest run --changed --config vite.config.ts"
    }
  }
}
